import turtle

from turtle import Turtle, Screen

screen=Screen()
s = Turtle("turtle")
s.speed(-1)


def dragging(x,y):
  s.ondrag(None)
  s.setheading(s.towards(x,y))
  s.goto(x,y)
  s.ondrag(dragging) 
  
def clickright(x,y):
  s.clear()
  
def main():
  turtle.listen()
  
  s.ondrag(dragging)
  
  turtle.onscreenclick(clickright, 3)
  
  screen.mainloop()
  
main()
