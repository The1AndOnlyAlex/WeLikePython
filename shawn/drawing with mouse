import turtle

from turtle import Turtle, Screen

screen=Screen()
s=Turtle("turtle")
s.speed(-1)


def draging(x,y):
  s.ondrag(None)
  s.heading(s.towards(x,y))
  s.goto(x,y)
  s.ondrag(draging) 
def clickright():
  s.clear()
def main():
  s.listen()
  
  s.ondrag(draging)
  
  s.onscreenclick(clickright(), 3)
  
  screen.mainloop()
main()

   
