import random
print('welcome to rock paper sissors')
print("rock,paper,sissors,or exit")
playable =['rock','sissor','paper', 'exit']
user_input=0


while(user_input != playable[3]): 
  computer_input= random.randint(1,3)
  user_input = input("")
 

  if(user_input != playable[3]):
    if(user_input == playable[0]):
        if(computer_input== 2):
           print("computer put sissor")
           print("you win")  
           print("if you want to continue")
           print("put in rock,paper,sissors,or exit")
          
        
        elif(computer_input==1):
           print("computer put rock")
           print("you drew")
           print("if you want to continue")
           print("put in rock,paper,sissors,or exit")
      
        else:
           print("computer put paper")
           print("you loss")  
           print("if you want to continue")
           print("put in rock,paper,sissors,or exit")        
    elif(user_input==playable[1]):
        if(computer_input== 1):
           print("computer put paper")
           print("you win")  
           print("if you want to continue")
           print("put in rock,paper,sissors,or exit")
        elif(computer_input==3):
           print("computer put sissor")
           print("you drew")  
           print("if you want to continue")
           print("put in rock,paper,sissors,or exit")
        else:
           print("computer put rock")
           print("you loss")  
           print("if you want to continue")
           print("put in rock,paper,sissors,or exit")
    elif(user_input==playable[2]):
         if(computer_input== 3):
           print("computer put rock")
           print("you win")  
           print("if you want to continue")
           print("put in rock,paper,sissors,or exit")
         elif(computer_input== 1):
           print("computer put sissor")
           print("you loss")  
           print("if you want to continue")
           print("put in rock,paper,sissors,or exit")
         else:
           print("computer put paper")
           print("you drew")  
           print("if you want to continue")
           print("put in rock,paper,sissors,or exit")
    else:
      print("that is invalid")    
      
  
  else:
    print("goodbye")
    break
